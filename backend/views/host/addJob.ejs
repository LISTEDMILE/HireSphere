<%- include('../partials/head')%>
<link rel="stylesheet" href="/addJobStyle.css"/>
<script>
	function display(a){
		document.getElementById('displayRange').value=document.getElementById('displayRangeDisplay').value=a;
	}

	function displayTraining(a){
		document.getElementById('displayTrain').value=document.getElementById('displayTrainDisplay').value=a;
	}

	function displayBoundY(a){
		document.getElementById('displayBound').value=document.getElementById('displayBoundDisplay').value=a;
	}
</script>
	<body>
		<%- include('../partials/navHost')%>
        <form action="/host/<%= editing ?'editJob':'addJob'%>" method="POST">
			<h1>
				<%= editing ? "Edit" : "Add" %> Job Post 
			</h1>
			<div id="div">
				<input type="hidden" <% if(editing) {%>value="<%=detail._id%>"<%}%> name="_id"/>
				<div>
					<label>
						 Organization Name
					</label>
            <input required type="text" <% if(editing) {%>value="<%=detail.jobCompany%>"<%}%> name="jobCompany" placeholder="Organization or Company"/>
			<label>
				Post to Seek for
			</label>
	<input required type="text" <% if(editing) {%>value="<%=detail.jobPost%>"<%}%> name="jobPost" placeholder="Required Post"/>
	<label>
		Location
	</label>
<input required type="text" <% if(editing) {%>value="<%=detail.jobLocation%>"<%}%> name="jobLocation" placeholder="Location"/>

<label>
	Salary Offered(*negotiable)
</label>
<input required type="number" <% if(editing) {%>value="<%=detail.jobSalaryOffered%>"<%}%> name="jobSalaryOffered" placeholder="Salaray"/>

<label>
	Skills Required
</label>
<input required type="text" <% if(editing) {%>value="<%=detail.jobSkiils%>"<%}%> name="jobSkiils" placeholder="Enter Skills here"/>

<label>
	Min CGPA
</label>
<input id="displayRange" class="range"  min="0" max="10" <% if(editing) {%>value="<%=detail.jobCGPA%>"<%}else{%>value="7"<%}
%>oninput="display(this.value)"></input>
<input type="range" id="displayRangeDisplay" oninput="display(this.value)" min="0" max="10" name="jobCGPA" step="0.1" <% if(editing) {%>value="<%=detail.jobCGPA%>"<%}else{%>value="7"<%}
%>>


<label>
	Training Period (*Years)
</label>
<input class="range" id="displayTrain"  min="0" max="10" <% if(editing) {%>value="<%=detail.jobTraining%>"<%}else{%>value="2"<%}
%>oninput="displayTraining(this.value)"></input>
<input type="range" oninput="displayTraining(this.value)" min="0" max="10" id="displayTrainDisplay" name="jobTraining" step="0.1" <% if(editing) {%>value="<%=detail.jobTraining%>"<%}else{%>value="2"<%}
%>>



<label>
	Bound Duration (*Years)
</label>
<input class="range" id="displayBound"  min="0" max="10" <% if(editing) {%>value="<%=detail.jobBound%>"<%}else{%>value="3"<%}
%>oninput="displayBoundY(this.value)"></input>
<input type="range" id="displayBoundDisplay" oninput="displayBoundY(this.value)" min="0" max="10" name="jobBound" step="0.1" <% if(editing) {%>value="<%=detail.jobBound%>"<%}else{%>value="3"<%}
%>>




<label>
	Language Required (*if any)
</label>
<input type="text" <% if(editing) {%>value="<%=detail.jobLanguages%>"<%}%> name="jobLanguage" placeholder="Enter Languages here"/>


<label>
	Enter your Contact Email
</label>
<input required type="email" <% if(editing) {%>value="<%=detail.jobOwnerEmail%>"<%}%> name="jobOwnerEmail" placeholder="Contact Email"/>
<label>
	Contact Mobile
</label>
<input type="number" min="6000000000" max="9999999999"<% if(editing) {%>value="<%=detail.jobOwnerMobile%>"<%}%> name="jobOwnerMobile" placeholder="Mobile NO."/>
			<label>
				Describe the Post
			</label>
			<textarea <% if(editing) {%>value="<%=detail.description%>"<%}%> name="description" placeholder="Describe your Post here"></textarea>


			<label>
				Perks And Insentives
			</label>
			<textarea <% if(editing) {%>value="<%=detail.perks%>"<%}%> name="jobPerks" placeholder="Add Insentives offered"></textarea>


		</div>
            <input id="submit" type="submit" value="<%= editing ? 'Update' : 'Add' %>"/>
			</div>
			<p> *For multiple response come back from next page.</p>
        </form>
		<%- include ('../partials/footer')%>
	</body>
</html>
		